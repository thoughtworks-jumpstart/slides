{
  "name": "slides",
  "version": "1.0.0",
  "description": "Jumpstart slides",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "serve": "python -m SimpleHTTPServer",
    "build": "npm run remove-dist-folder && npm run copy-md-files && marp topics/ && npm run remove-md-files",
    "remove-dist-folder": "rm -rf topics",
    "copy-md-files": "cp -r src/ topics/",
    "remove-md-files": "rm -r topics/**/*.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thoughtworks-jumpstart/slides.git"
  },
  "keywords": [],
  "author": "Jesstern Rays",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thoughtworks-jumpstart/slides/issues"
  },
  "homepage": "https://github.com/thoughtworks-jumpstart/slides#readme",
  "dependencies": {
    "@marp-team/marp-cli": "^0.19.0"
  },
  "devDependencies": {
    "husky": "^4.2.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  }
}
